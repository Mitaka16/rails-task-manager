<div class="container">
<%= form_for(task) do |f|%>
  <%= f.label :title, class: 'form-input'  %>
  <%= f.text_field :title %>
  <%= f.label :details, class: 'form-input'  %>
  <%= f.text_field :details  %>
  <%= f.label :completed%>
  <%= f.check_box :completed %>
  <%= f.submit class: 'btn btn-danger mt-2' %>
<% end %>
</div>
